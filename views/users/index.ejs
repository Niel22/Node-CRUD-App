<%- include('../layout/header')%>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
             <div class="alert alert-dismissable fade show alert-<%= message.type %>" role="alert">
                 <strong><%= message.message%></strong>
                 <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
             </div>
            <% } %>
            <% if (users != '') { %>
             
                <div class="table-responsive">
                    <table class="table table-stripped">
                    <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index) => { %>
                         
                            <tr>
                                <td><%= index+1 %></td>
                                <td><img src="<%= user.image %>" width="70px" alt="<%= user.name %>"></td>
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td><%= user.phone %></td>
                                <td>
                                    <a href="/edit/<%= user._id %>" class="text-succes"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/delete/<%= user._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% }else{ %>
                <h1 class="text-center text-secondary mt-5">No User Found</h1>
            <% } %>
        </div>
    </div>
</div>

<%- include('../layout/footer')%>